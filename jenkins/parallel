pipeline {
    agent none 
    stages {
        stage('BUILD') {
            agent any
            steps {
                sh '''
                    #!/bin/bash 
                    pwd 
                    ls
                    echo "This is a BUILD stage"
                '''  
            }
        }
        stage('DEPLOY') {
            agent { label 'c-node' } 
            steps {
                echo "This is a DEPLOY stage"
            }
        }
        stage('TESTING') {
            parallel {
                stage('TESTING1') {
                    agent { label 'c-node' } 
                    steps {
                        sh echo "This is a TESTING1 stage"
                    }
                }
                stage('TESTING2') {
                    agent { label 'master' } 
                    steps {
                        sh '''
                            echo "This is a TESTING2 stage"
                        '''
                    }
                }
                
        }    
    }
}
}
